<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="Jenkins">
<property file="${basedir}/build.properties"/>
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <!-- Property defining the war Filename -->
	<property name="warFile" value="${appName}.war"/>
    <path id="Jenkins.classpath">
        <pathelement location="bin"/>
    </path>
    <target name="init">
        <mkdir dir="war"/>
        <copy includeemptydirs="false" todir="war">
            <fileset dir="${basedir}">
                <include name="**/*.html"/>
            </fileset>
        </copy>
    </target>
    <target name="clean">
        <delete dir="build"/>
		<delete dir="war"/>
    </target>
	<target name="gitLoad">
		<typedef resource="org/tigris/subversion/svnant/svnantlib.xml">
			<classpath>
			<fileset dir="${property.svnlib}">
				<include name="**/*.jar"/>
			</fileset>
			</classpath>
		</typedef>
	</target>
	<target name="buildWar" depends="clean,init">
		<jar jarfile="build/${warFile}" basedir="${basedir}/war"/>
   </target>
</project>
